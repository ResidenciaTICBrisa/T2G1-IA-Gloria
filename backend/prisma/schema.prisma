generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Occurrence {
  id_occurrence       BigInt           @id @default(autoincrement())
  id_user             BigInt           @unique
  datetime_submission DateTime         @db.Timestamptz(6)
  State_violence      String?
  date_violence       DateTime?         @db.Date
  time_violence       DateTime?        @db.Timetz(6)
  agegroup            String?
  latitude            Decimal?          @db.Decimal(9, 6)
  longitude           Decimal?          @db.Decimal(9, 6)
  violencesoptions    String?
  violencetype        String?
  StateList           StateList?        @relation(fields: [State_violence], references: [uf_State], onDelete: NoAction, onUpdate: NoAction, map: "Occurrence_fk3")
  UserOccurrences     UserOccurrences?
}

model TypesOfViolence {
  id_violencetype String @id
  Description     String
}

model User {
  id_user String @id
}

model UserOccurrences {
  id_occurrence BigInt     @id
  id_user       BigInt
  date_violence DateTime   @db.Date
  Occurrence    Occurrence @relation(fields: [id_occurrence], references: [id_occurrence], onDelete: NoAction, onUpdate: NoAction, map: "UserOccurrences_fk0")
}

model ViolenceSituations {
  id_violenceoption String @id
  Description       String
}

model StateList {
  id_State        BigInt       @id @default(autoincrement())
  uf_State        String       @unique
  name_State      String
  num_Occurrences BigInt?      @default(0)
  Occurrence      Occurrence[]
}

model Access {
  id          BigInt   @id @default(autoincrement())
  fingerprint String   @db.VarChar(255)
  latitude    Decimal  @db.Decimal(9, 6)
  longitude   Decimal  @db.Decimal(9, 6)
  createdat   DateTime @default(now()) @db.Timestamptz(6)
}
